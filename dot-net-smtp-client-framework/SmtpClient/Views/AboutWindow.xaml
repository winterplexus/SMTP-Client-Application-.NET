<Window x:Class="SmtpClient.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" Title="About Application" Height="160" Left="220" Top="120" Width="595" WindowStartupLocation="Manual" WindowState="Normal" WindowStyle="ToolWindow">
    <Grid>
        <Image Source="..\Resources/mail-server.png" HorizontalAlignment="Left" Height="48" Margin="10,10,0,0" VerticalAlignment="Top" Width="48" />

        <TextBlock Name="DescriptionTextBlock" FontWeight="Bold" Foreground="ForestGreen" HorizontalAlignment="Left" Margin="65,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBlock Name="VersionTextBlock" HorizontalAlignment="Left" Margin="65,30,0,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBlock Name="ProductDescriptionTextBlock"  HorizontalAlignment="Left" Margin="65,50,0,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBlock Name="CopyrightTextBlock" HorizontalAlignment="Left" Margin="65,70,0,0" TextWrapping="Wrap" VerticalAlignment="Top"/>

        <Button Content="OK" HorizontalAlignment="Left" Margin="500,85,0,0" VerticalAlignment="Top" Width="60" Click="OKButtonClick" ToolTip="Close window"/>
    </Grid>
</Window>
